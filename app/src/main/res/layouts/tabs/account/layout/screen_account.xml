<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text="Version"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/patient_profile_bg" />

                <LinearLayout
                    android:id="@+id/optionLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_logout" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/default_margin"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="@dimen/card_elevation">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_profile" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/optionsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/optionEditProfile2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="25dp">

                                <ImageView
                                    android:id="@+id/imgTechStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_editprofiledetails" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/language2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="15dp"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="25dp">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="12dp"
                                    android:src="@drawable/language_selection"
                                    android:tint="@color/black" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/changePassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                app:cardBackgroundColor="@color/rating_selected"
                                app:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"

                                    android:layout_margin="12dp"
                                    android:src="@drawable/lock_white" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/locationUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="12dp"
                                    android:src="@drawable/icon_location"
                                    app:tint="@color/black" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textAppearance="@style/CustomFont.ProductName"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_call"
            android:drawablePadding="8dp"
            android:text="Mobile Number"
            android:textAppearance="@style/CustomFont.DisplayText"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font_size" />

        <TextView
            android:id="@+id/optionEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_editprofiledetails"
            android:drawableEnd="@drawable/ic_proceed_arrow2"
            android:drawablePadding="8dp"
            android:fontFamily="@font/gotham"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:text="Edit Profile"
            android:textAppearance="@style/CustomFont.DisplayText"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txt_order_his"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_shopping_cart"
            android:drawableEnd="@drawable/ic_proceed_arrow2"
            android:drawablePadding="8dp"
            android:fontFamily="@font/gotham"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:text="Order History"
            android:textAppearance="@style/CustomFont.DisplayText"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_baseline_translate_24"
            android:drawableEnd="@drawable/ic_proceed_arrow2"
            android:drawablePadding="8dp"
            android:fontFamily="@font/gotham"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:text="Language Settings"
            android:textAppearance="@style/CustomFont.DisplayText"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profileInfoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            tools:listitem="@layout/item_account" />

    </LinearLayout>

</LinearLayout>