<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/default_small_padding"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/selected"
                android:layout_width="@dimen/menu_icon_height"
                android:layout_height="@dimen/menu_icon_height"
                android:src="@drawable/icon_option_tick"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/default_margin"
                android:tint="@color/colorPrimary"
                />
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/menu_icon_height"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/language_locale_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="தமிழ்"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/language_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Tamil"
                    android:visibility="gone"
                    android:padding="5dp"/>

            </LinearLayout>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>
